<?xml version="1.0" encoding="utf-8"?>

<com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        app:collapsedHeight="@dimen/series_panel_height">

    <fragment
            android:id="@+id/chapter_list_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/series_panel_height"
            class="com.dgsd.android.mangamaster.fragment.ChapterListFragment" />

    <fragment
            android:id="@+id/series_info_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.dgsd.android.mangamaster.fragment.SeriesInfoFragment" />

</com.sothree.slidinguppanel.SlidingUpPanelLayout>