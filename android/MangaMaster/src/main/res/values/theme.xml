<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeBase" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ManagaMadness.ActionBar.Solid</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase" />

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.OpaqueNavgiationBar" parent="AppTheme" />

    <style name="AppTheme.ChapterActivityBase" parent="AppTheme">
        <item name="android:windowBackground">@color/background_chapter_activity</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/MangaMadness.ActionBar.ChapterActivity</item>
    </style>

    <style name="AppTheme.ChapterActivity" parent="AppTheme.ChapterActivityBase" />
</resources>